{# Large Image #}
{% case 'imageLargeSingle' %}
<div class="col-12">
  <span class="image fit">
    <a data-fancybox="gallery" href="{{ block.imageLargeSingle.one().getUrl() }}">
      <img src="{{ block.imageLargeSingle.one().getUrl() }}" alt="{{ block.altField }}" />
    </a>
  </span>
</div>

